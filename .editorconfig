root = true

[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,svelte,ts,json}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[site.webmanifest]
indent_style = space
indent_size = 2

[*.styl]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab
indent_size = unset

[Dockerfile]
indent_size = 4

[devcontainer.json]
indent_size = 4
